# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all' #a gem to load all files in a folder, or all files with so and so extension in that folder. in subfolders and all
gem 'activerecord', '5.2'
gem 'sinatra-activerecord'
gem 'rake'

group :development do
	gem 'shotgun'
	gem 'pry'
	gem 'sqlite3', '~> 1.3.6'
	gem 'tux' #is this similar to the database.connection thing???
	#tux will give us an interactive console that pre-loads our database and ActiveRecord relationships for us.
end